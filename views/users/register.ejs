<%- layout('layouts/boilerplate') %>

<div class="container justify-content-center align-items-center mt-5">
  <div class="row">
    <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
      <div class="card shadow">
        <div class="card-body">
          <h5 class="card-title">Register</h5>
          <form action="/register" method="POST" novalidate class="validated-form">
            <div class="mb-3">
              <label class="form-label" for="username">Enter Username: </label>
              <input class="form-control" type="text" name="user[username]" id="username" required>
              <div class="valid-feedback">
                Looks good!
              </div>
            </div>


            <div class="mb-3">
              <label class="form-label" for="password">Enter Password: </label>
              <input class="form-control" type="password" name="user[password]" id="password" required>
              <div class="valid-feedback">
                Looks good!
              </div>
            </div>

            <button class="btn btn-success">Register</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>